(defwidget cal []
  (box :class "cal" :orientation "v"
    (box :class "cal-in"
      (calendar
        :class "cal"
        :day calendar_day
        :year calendar_year
      )
    )
  )
)

(defwindow calendar
  :geometry (
    geometry
    :x "-10px"
    :y "4.3%"
    :anchor "top right"
    :width "270px"
    :height "60px"
  )
  (cal)
)

